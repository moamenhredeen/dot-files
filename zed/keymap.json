[
  {
    "context": "Editor && vim_mode == normal && (vim_operator == none || vim_operator == n) && !VimWaiting",
    "bindings": {
      ", t": "task::Spawn",
      ", r": "task::Rerun",
      // "space b": ["tab_switcher::Toggle", { "select_last": true }],
      "space b": ["file_finder::Toggle", { "separate_history": true }],
      "space f": ["file_finder::Toggle", { "separate_history": true }],
      "space x": "command_palette::Toggle",
      "space e": "project_panel::ToggleFocus",
      "space w": "workspace::Save",
      "space o": "outline::Toggle",
      "space r r": "editor::Rename",
      "space r a": "editor::FindAllReferences",
      "g i": "editor::GoToImplementation",
      "K": "editor::Hover"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-s": "pane::SplitDown",
      "alt-v": "pane::SplitRight"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "q": "workspace::ToggleLeftDock",
      "a": "project_panel::NewFile",
      "d": "project_panel::Delete",
      "space f": "file_finder::Toggle"
    }
  },
  {
    "bindings": {
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"]
    }
  }
]
